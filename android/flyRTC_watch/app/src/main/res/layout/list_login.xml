<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="20dp"
    android:background="#ffffff"
    android:orientation="horizontal"
    android:paddingLeft="1dp"
    android:paddingRight="1dp">

    <LinearLayout
        android:id="@+id/login_list_ll_l"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/login_list_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@mipmap/head1_small" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_list_ll_r"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/login_list_cb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:button="@drawable/login_list_selector" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toStartOf="@id/login_list_ll_r"
        android:layout_toEndOf="@id/login_list_ll_l"
        android:orientation="vertical">

        <TextView
            android:id="@+id/login_list_tv_client"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="false"
            android:gravity="center"
            android:textColor="#1f1f1f"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/login_list_tv_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_weight="1"
            android:clickable="false"
            android:gravity="center"
            android:textColor="#999999"
            android:textSize="12sp" />
    </LinearLayout>
</RelativeLayout>
