<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:paddingStart="10dip"
        android:paddingEnd="10dip"
        android:clickable="false"
        android:gravity="center_vertical"
        android:text="@string/login_select"
        android:textColor="#414141"
        android:background="#ffffff"
        android:textSize="22sp"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <CheckBox
            android:id="@+id/old_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/app_sr"
            android:layout_gravity="center"
            android:button="@drawable/login_list_selector" />

        <CheckBox
            android:id="@+id/new_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/app_can"
            android:layout_gravity="center"
            android:button="@drawable/login_list_selector" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="#67b83d"/>

    <ListView
        android:id="@+id/login_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:dividerHeight="1dp"
        android:divider="#ececec"
        android:fadingEdge="none"
        android:footerDividersEnabled="true"
        android:listSelector="#00000000"
        android:scrollbars="vertical"
        android:transcriptMode="normal" >
    </ListView>

    <LinearLayout
        android:id="@+id/login_client_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:gravity="bottom" >

        <TextView
            android:id="@+id/login_client_bt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="false"
            android:gravity="center"
            android:background="#58b727"
            android:text="@string/login_client"
            android:textColor="#ffffff"
            android:textSize="22sp" />
    </LinearLayout >
</LinearLayout>